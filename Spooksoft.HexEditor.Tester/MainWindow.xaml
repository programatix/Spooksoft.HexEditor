<Window
    x:Class="Spooksoft.HexEditor.Tester.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Spooksoft.HexEditor.Controls;assembly=Spooksoft.HexEditor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Spooksoft.HexEditor.Tester"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <controls:HexEditorDisplay
            x:Name="heEditor"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AllowAppendDocument="False"
            IsShowFooter="False" />
    </Grid>
</Window>