<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net48;net472;net6.0-windows;net8.0-windows</TargetFrameworks>
    <Nullable>disable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <FileVersion>1.0.3.3</FileVersion>
    <AssemblyVersion>1.0.3.3</AssemblyVersion>
    <VersionPrefix>1.0.3.3</VersionPrefix>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageReleaseNotes>IsReadOnly and support for the mouse wheel</PackageReleaseNotes>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Wojciech "Spook" Sura</Authors>
    <Description>A performant and elegant hexeditor control for WPF.</Description>
    <PackageProjectUrl>https://github.com/programatix/Spooksoft.HexEditor</PackageProjectUrl>
    <RepositoryUrl>https://github.com/programatix/Spooksoft.HexEditor</RepositoryUrl>
    <PackageId>Programatix.$(AssemblyName)</PackageId>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|net6.0-windows|AnyCPU'">
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net6.0-windows|AnyCPU'">
    <WarningLevel>5</WarningLevel>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
